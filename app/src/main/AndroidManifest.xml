<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evdev.viceless">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ResetPasswordActivity"/>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- For splash screen; applied this theme so we get rid of action bar -->
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".smoking.SmokingHomeActivity"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".smoking.SmokingIntroActivity"
            android:theme="@style/AppTheme2" />

        <activity android:name=".smoking.SmokingStatsActivity"
            android:theme="@style/AppTheme2" />

        <activity android:name=".alcohol.AlcoholHomeActivity" />

        <activity android:name=".drugs.DrugsHomeActivity" />


    </application>

</manifest>