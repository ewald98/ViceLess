<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/splashBackground"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingBottom="40dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/rounded_frame_layout"
        android:paddingTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/homepageTitle"
                android:gravity="top|center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:paddingTop="30dp"
                android:layout_marginTop="5dp"/>


            <ImageButton
                android:id="@+id/smokingButton"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/nosmoking"
                android:scaleType="fitCenter"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:background="@color/white"/>
            <ImageButton
                android:id="@+id/alcoholButton"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/noalcohol"
                android:scaleType="fitCenter"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:background="@color/white"/>
            <ImageButton
                android:id="@+id/drugButton"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/nodrugs"
                android:scaleType="fitCenter"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:background="@color/white"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>